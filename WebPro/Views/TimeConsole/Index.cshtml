@{
    ViewBag.Title = "时间轴维护";
}
@section PageSpecificStyleSheetIncludes{
    <link rel="stylesheet" href="~/assets/plugins/bootstrap/css/bootstrap-table.css">
}
<div class="content-side-right">
    <div class="container content-sm">
        <div id="toolbar">
            @*<button id="remove" class="btn btn-danger" disabled>
                    <i class="glyphicon glyphicon-remove"></i> Delete
                </button>*@
            <a class="btn-u btn-u-sm" href="@Url.Action("Create", "TimeConsole")">新增 <i class="fa  fa-plus margin-left-5"></i></a>
        </div>
        <table id="table"></table>
    </div>
</div>
@section PageSpecificJavascriptIncludes{
    <script type="text/javascript" src="~/assets/plugins/jquery/jquery.min.js"></script>
    <script type="text/javascript" src="~/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/assets/plugins/bootstrap/js/bootstrap-table.js"></script>
    <script type="text/javascript" src="~/assets/plugins/bootstrap/js/bootstrap-table-zh-CN.js"></script>
    <script>
        jQuery(document).ready(function () {
            //App.init();
            $("#timeli").addClass("active");
            initTable();
        });
        var $table = $('#table'),
            //$remove = $('#remove'),
            selections = [];
        function initTable() {
            $table.bootstrapTable({
                url: '@Url.Action("GetData", "TimeConsole")',
                locale: 'zh',
                pagination: true,
                sidePagination: 'server',
                search: true,
                showHeader: true,
                showFooter: false,
                showColumns: true,
                showPaginationSwitch: true,
                showRefresh: true,
                showToggle: true,
                minimumCountColumns: 2,
                detailView: true,
                detailFormatter: detailFormatter,
                toolbar: '#toolbar',
                height: getHeight(),
                responseHandler: responseHandler,
                striped: true,
                clickToSelect: true,
                smartDisplay: true,
                columns: [
                        {
                            field: 'state',
                            checkbox: true,
                            align: 'center',
                            valign: 'middle'
                        }, {
                            title: 'ID',
                            field: 'id',
                            align: 'center',
                            valign: 'middle',
                            sortable: true
                        },
                         {
                             field: 'title',
                             title: '标题',
                             sortable: true,
                             align: 'left'
                             //editable: {
                             //    type: 'text',
                             //    title: 'Item Price',
                             //    validate: function (value) {
                             //        value = $.trim(value);
                             //        if (!value) {
                             //            return 'This field is required';
                             //        }
                             //        if (!/^$/.test(value)) {
                             //            return 'This field needs to start width $.'
                             //        }
                             //        var data = $table.bootstrapTable('getData'),
                             //            index = $(this).parents('tr').data('index');
                             //        console.log(data[index]);
                             //        return '';
                             //    }
                             //},
                             //footerFormatter: totalPriceFormatter
                         },
                        {
                            field: 'content',
                            title: '内容',
                            sortable: true,
                            //editable: true,
                            align: 'left'
                        }, {
                            field: 'publishTime',
                            title: '发布日期',
                            sortable: true,
                            align: 'center'
                        },
                        {
                            field: 'operate',
                            title: '操作',
                            align: 'center',
                            events: operateEvents,
                            formatter: operateFormatter
                        }
                ]
            });
            // sometimes footer render error.
            setTimeout(function () {
                $table.bootstrapTable('resetView');
            }, 200);
            $table.on('check.bs.table uncheck.bs.table ' +
                    'check-all.bs.table uncheck-all.bs.table', function () {
                        $remove.prop('disabled', !$table.bootstrapTable('getSelections').length);
                        // save your data, here just save the current page
                        selections = getIdSelections();
                        // push or splice the selections if you want to save all data selections
                    });
            $table.on('expand-row.bs.table', function (e, index, row, $detail) {
                if (index % 2 == 1) {
                    $detail.html('Loading from ajax request...');
                    $.get('LICENSE', function (res) {
                        $detail.html(res.replace(/\n/g, '<br>'));
                    });
                }
            });
            $table.on('all.bs.table', function (e, name, args) {
                console.log(name, args);
            });
            //$remove.click(function () {
            //    var ids = getIdSelections();
            //    $table.bootstrapTable('remove', {
            //        field: 'id',
            //        values: ids
            //    });
            //    $remove.prop('disabled', true);
            //});
            $(window).resize(function () {
                $table.bootstrapTable('resetView', {
                    height: getHeight()
                });
            });
        }
        function getIdSelections() {
            return $.map($table.bootstrapTable('getSelections'), function (row) {
                return row.id
            });
        }
        function responseHandler(res) {
            $.each(res.rows, function (i, row) {
                row.state = $.inArray(row.id, selections) !== -1;
            });
            return res;
        }
        function detailFormatter(index, row) {
            var html = [];
            $.each(row, function (key, value) {
                html.push('<p><b>' + key + ':</b> ' + value + '</p>');
            });
            return html.join('');
        }
        function operateFormatter(value, row, index) {
            return [
                '<a class="like" href="/TimeConsole/Edit/' + row.id, '" title="编辑">',
                '<i class="fa  fa-pencil"></i>',
                '</a>  ',
                '<a class="remove" href="javascript:void(0)" title="删除">',
                '<i class="glyphicon glyphicon-remove"></i>',
                '</a>'
            ].join('');
        }
        window.operateEvents = {
            //'click .like': function (e, value, row, index) {
            //    $.ajax({
            //        url: "/TimeConsole/Edit",
            //        type: "GET",
            //        dataType: "json",
            //        data: { id: row.id },
            //        success: function (res) {
            //        }
            //    });
            //},
            'click .remove': function (e, value, row, index) {
                if (confirm('您确认想要删除记录吗？')) {
                    $.ajax({
                        url: "/TimeConsole/Delete",
                        type: "POST",
                        data: { id: row.id },
                        success: function (res) {
                            if (res == "S") {
                                alert("删除成功!");
                                $table.bootstrapTable('refresh');
                            }
                        }
                    });
                }
            }
        };
        //function totalTextFormatter(data) {
        //    return 'Total';
        //}
        //function totalNameFormatter(data) {
        //    return data.length;
        //}
        //function totalPriceFormatter(data) {
        //    var total = 0;
        //    $.each(data, function (i, row) {
        //        total += +(row.price.substring(1));
        //    });
        //    return '$' + total;
        //}
        function getHeight() {
            return $(window).height() - $('h1').outerHeight(true);
        }
    </script>
}
