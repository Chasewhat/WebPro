@model WebPro.Models.PagerTimeQuery<WebPro.Models.PagerInfo, IQueryable<WebPro.Models.Essays>>
@{
    ViewBag.Title = "时间轴-左瑞祥的个人博客-可以平凡不能平庸";
}
@section metas{
    <meta name="description" content="时间轴-左瑞祥的个人博客">
    <meta name="keywords" content="时间轴，左瑞祥，个人博客">
}
@using WebPro
@section PageSpecificStyleSheetIncludes{
    <link rel="stylesheet" href="~/assets/css/pages/shortcode_timeline2.css">
    <link rel="stylesheet" href="~/assets/plugins/cube-portfolio/cubeportfolio/css/cubeportfolio.min.css">
    <link rel="stylesheet" href="~/assets/plugins/cube-portfolio/cubeportfolio/custom/custom-cubeportfolio.css">
}
<!--=== Breadcrumbs ===-->
<div class="breadcrumbs">
    <div class="container">
        <h5 class="pull-left" style="color:silver">彼年他时，留得住的是回忆，留不住的是时间。</h5>
        <ul class="pull-right breadcrumb">
            <li><i class="fa  fa-map-marker"></i> @Html.ActionLink("主页", "Index", "Home")</li>
            <li class="active">时间轴</li>
        </ul>
    </div>
</div><!--/breadcrumbs-->
<!--=== End Breadcrumbs ===-->
<!--=== Content Part ===-->
<div class="container content">
    <div class="row">
        <!-- Begin Content -->
        <div class="col-md-9">
            <ul class="timeline-v2">
                @foreach (var item in Model.EntityList)
                {
                    <li>
                        <time class="cbp_tmtime" datetime=""><span>@item.publishTime.ToString("yyyy-MM-dd")</span> <span>@item.week</span></time>
                        <i class="cbp_tmicon rounded-x hidden-xs"></i>
                        <div class="cbp_tmlabel">
                            @if (!string.IsNullOrEmpty(item.title))
                            {
                                <h2>@item.title</h2>
                            }
                            <div class="row">
                                @if (!string.IsNullOrEmpty(item.imgurls))
                                {
                                    <div class="col-md-4">
                                        <div class="cube-portfolio">
                                            <div id="grid-container-@item.id" class="cbp-l-grid-agency">
                                                <div class="cbp-item">
                                                    <div class="cbp-caption">
                                                        <div class="cbp-caption-defaultWrap">
                                                            <img src="@item.imgurls" alt="">
                                                        </div>
                                                        <div class="cbp-caption-activeWrap">
                                                            <div class="cbp-l-caption-alignCenter">
                                                                <div class="cbp-l-caption-body">
                                                                    <ul class="link-captions">
                                                                        <li><a href="@item.imgurls" class="cbp-lightbox" data-title="@item.title"><i class="rounded-x fa fa-search"></i></a></li>
                                                                    </ul>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="md-margin-bottom-20"></div>
                                    </div>
                                }
                                <div class="col-md-8">
                                    <p>@Html.Raw(@item.content)</p>
                                </div>
                            </div>
                        </div>
                    </li>
                }
            </ul>
            <!--Pagination-->
            <div class="text-center">
                <ul class="pagination">
                    @Html.ShowPageNavigate(Model.Pager.CurrentPageIndex, Model.Pager.PageSize, Model.Pager.RecordCount)
                </ul>
            </div>
            <!--End Pagination-->
        </div>
        <!-- End Content -->
        @Html.Partial("~/Views/Shared/RightShareForOthers.cshtml")
    </div>
</div><!--/container-->
<!--=== End Content Part ===-->
@section PageSpecificJavascriptIncludes{
    <script type="text/javascript" src="~/assets/plugins/jquery/jquery.min.js"></script>
    <script type="text/javascript" src="~/assets/plugins/jquery/jquery-migrate.min.js"></script>
    <script type="text/javascript" src="~/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <!-- JS Implementing Plugins -->
    <script type="text/javascript" src="~/assets/plugins/back-to-top.js"></script>
    <script type="text/javascript" src="~/assets/plugins/smoothScroll.js"></script>
    <script type="text/javascript" src="~/assets/plugins/cube-portfolio/cubeportfolio/js/jquery.cubeportfolio.min.js"></script>
    <script type="text/javascript" src="~/assets/js/plugins/cube-portfolio/cube-portfolio-4.js"></script>
    <!-- JS Customization -->
    <script type="text/javascript" src="~/assets/js/custom.js" charset="gbk"></script>
    <!-- JS Page Level -->
    <script type="text/javascript" src="~/assets/js/app.js"></script>
    <script type="text/javascript">
        jQuery(document).ready(function () {
            App.init();
            $("#timeli").addClass("active");
        });
    </script>
}
